<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
        <style id="Body" backgroundColor="white" />
        <style id="Main" flex="1" ></style>

        <style id="Header" flexDirection="row" justifyContent="space-between" alignItems="center" borderBottomColor="#ccc" borderBottomWidth="1" paddingLeft="24" paddingRight="24" paddingVertical="16" backgroundColor="white" />
        <style id="Header__Title" fontSize="16" color="black" fontWeight="500" />
        <style id="Header__Button" fontSize="16" color="blue" />

        <style id="Spinner" alignItems="center" alignSelf="center" color="#4778FF" />
        <style id="Heading__Title" fontSize="18" textAlign="center" marginVertical="32" fontWeight="500" />

        <style id="Test__Item" borderBottomColor="#ddd"  borderBottomWidth="1" paddingLeft="24" paddingRight="24" paddingVertical="16" backgroundColor="white" />
        <style id="Test__ItemContainer" display="flex" flexDirection="row" justifyContent="space-between" />

        <style id="Question__ResultsTitle" fontSize="18" marginVertical="32" marginLeft="24" marginRight="24" fontWeight="500" />
        <style id="Question__ResultsOption" fontSize="14"  marginVertical="8"  marginLeft="24" marginRight="24"/>
        <style id="Question__ResultsSeparator" borderTopColor="#e1e3e3" borderTopWidth="2" marginLeft="24" marginRight="24"/>
        <style id="Test__ResultsText" fontSize="14" textAlign="center" marginVertical="8" marginLeft="24" marginRight="24" />
        <style id="Question__Image" height="100" width="25%" alignSelf="center" />

        <style id="Info__Title" fontSize="18" marginVertical="24" marginLeft="24" marginRight="24" fontWeight="500" />
        <style id="Info__Text" fontSize="14"  marginVertical="8"  marginLeft="24" marginRight="24" />
        <style id="Info__TextUrl" color="#4778FF" fontSize="14"  marginVertical="8"  marginLeft="24" marginRight="24" />

        <style id="Select" marginTop="24" />
        <style id="Select__Separator" borderTopColor="#e1e3e3" borderTopWidth="1" marginLeft="24" marginRight="24"/>
        <style id="Select__Option" alignItems="center" flex="1" flexDirection="row" justifyContent="space-between" paddingBottom="12" paddingTop="12" paddingLeft="24" paddingRight="24" />
        <style id="Select__RadioOuter" borderColor="#bdc4c4" borderRadius="10" borderWidth="1" height="20" width="20" >
          <modifier selected="true"><style borderColor="#4778ff" borderWidth="2" /></modifier>
        </style>
        <style id="Select__RadioInner" borderRadius="5" height="10" marginLeft="3" marginTop="3" opacity="0" width="10">
          <modifier selected="true"><style backgroundColor="#4778ff" opacity="1" /></modifier>
        </style>

        <style id="Select__Label" color="#4e4d4d" fontSize="16" fontWeight="normal" lineHeight="18" >
          <modifier selected="true"><style color="#312f2f" /></modifier>
          <modifier pressed="true"><style color="#312f2f" /></modifier>
        </style>

        <style id="Tags" flex="1" flexDirection="row" flexWrap="wrap" justifyContent="flex-start" marginLeft="24" marginRight="24" marginTop="40" />
        <style id="Tag" borderColor="#bdc4c4" borderRadius="32" borderWidth="1" marginBottom="8" marginRight="8" paddingBottom="8" paddingLeft="16" paddingRight="16" paddingTop="8">
          <modifier selected="true"> <style backgroundColor="#4778ff" borderColor="white" /></modifier>
        </style>

        <style id="Tag__Label" color="#4e4d4d" fontSize="16" fontWeight="bold" lineHeight="18">
          <modifier selected="true"><style color="white" /></modifier>
        </style>

        <style id="FormGroup" flex="1" marginLeft="24" marginRight="24" />
        <style id="Input" borderBottomColor="#E1E1E1" borderBottomWidth="1" borderColor="#4E4D4D" flex="1" fontSize="16" fontWeight="normal" paddingBottom="8" paddingTop="8">
          <modifier focused="true"> <style borderBottomColor="#4778FF" /></modifier>
        </style>

        <style id="BottomSheet__Button" alignItems="center" backgroundColor="#4778FF" height="48" width="90%" alignSelf="center" justifyContent="center"  />
        <style id="BottomSheet__Button--Disabled" backgroundColor="#80AAFF" />
        <style id="BottomSheet__ButtonLabel" color="white" fontSize="16" fontWeight="500" lineHeight="24" />
      </styles>

    <body style="Body" scroll="true">
      <header style="Header" >
        {% block header %}<text style="Header__Title">Tests DGT</text>{% endblock %}
      </header>
      <view style="Main" >
        {% block content %}{% endblock %}
      </view>
    </body>
  </screen>
</doc>
